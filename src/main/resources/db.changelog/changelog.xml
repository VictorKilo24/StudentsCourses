<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">


    <changeSet author="vladimir_kushhov" id="create-table-persons">
        <createTable tableName="persons">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="vladimir_kushhov" id="create-tables-courses">
        <createTable tableName="courses">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="available_space" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="vladimir_kushhov" id="create-tables-persons_courses">
        <createTable tableName="persons_courses">
            <column name="persons_id" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="courses_id" type="int">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="vladimir_kushhov" id="insertValues>">
        <sqlFile path="db.changelog/insertValues.sql"/>
    </changeSet>
    <changeSet author="vladimir_kushhov" id="AddForeignKey>">
        <sqlFile path="db.changelog/AddForeignKey.sql"/>
    </changeSet>

</databaseChangeLog>